<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.contest.xczx_plus_content_service.content.mapper.CourseCategoryMapper">
    <resultMap id="BaseResultMap" type="com.contest.xczx_plus_content_model.content.Dao.CourseCategory">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="label" property="label" />
        <result column="parentid" property="parentid" />
        <result column="is_show" property="isShow" />
        <result column="orderby" property="orderby" />
        <result column="is_leaf" property="isLeaf" />
    </resultMap>


    <select id="SelectCourseCategory" resultType="com.contest.xczx_plus_content_model.content.Dao.CourseCategory" parameterType="string">
        with recursive t1 as (
            select * from  course_category where  id= #{id}
            union all
            select t.* from course_category t inner join t1 on t1.id = t.parentid
        ) select *  from t1 order by t1.id
    </select>

    <select id="SelectCourseCategorys" resultType="com.contest.xczx_plus_content_model.content.Dao.CourseCategory" parameterType="string">
        select * from course_category
    </select>

</mapper>
